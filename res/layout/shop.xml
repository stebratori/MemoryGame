<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="317dp" >

        <ImageButton
            android:id="@+id/shopFessorCowboy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/fessor_cowboy_large" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/shopFessorCowboy"
            android:layout_below="@+id/shopFessorCowboy"
            android:src="@drawable/coins_small" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/shopFessorIndian"
            android:layout_below="@+id/shopFessorIndian"
            android:src="@drawable/coins_small" />

        <ImageButton
            android:id="@+id/shopFessorIndian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView1"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@+id/shopFessorCowboy"
            android:src="@drawable/fessor_indian_large" />

        <ImageButton
            android:id="@+id/shopFessorPirate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView2"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/shopFessorIndian"
            android:src="@drawable/fessor_pirate_large" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:text="20"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:text="20"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="20"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/shopFessorPirate"
            android:layout_below="@+id/shopFessorPirate"
            android:src="@drawable/coins_small" />

        <ImageButton
            android:id="@+id/shopFessorHero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/shopFessorCowboy"
            android:layout_marginLeft="50dp"
            android:src="@drawable/fessor_figurine" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/shopFessorHero"
            android:layout_below="@+id/shopFessorHero"
            android:src="@drawable/coins_small" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:text="20"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/mrzimAndroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/shopFessorPirate"
            android:text="Button" />

    </RelativeLayout>

</ScrollView>